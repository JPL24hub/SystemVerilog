from pynq import Overlay, allocate
import numpy as np
import matplotlib.pyplot as plt

# Load bitstream
ol = Overlay("design_1.bit")
dma = ol.axi_dma_0

# Number of samples to capture
N = 1024

# Allocate buffer (8 bytes per sample: 24-bit cos + 24-bit sin)
buffer = allocate(shape=(N*2,), dtype=np.int32)

# Capture data
dma.recvchannel.transfer(buffer)
dma.recvchannel.wait()

# Extract cosine and sine (assuming packed as alternating 32-bit values)
cos_data = buffer[0::2]  # Even indices
sin_data = buffer[1::2]  # Odd indices

# Sign-extend from 24-bit to 32-bit
cos_data = np.where(cos_data > 0x7FFFFF, cos_data - 0x1000000, cos_data)
sin_data = np.where(sin_data > 0x7FFFFF, sin_data - 0x1000000, sin_data)

# Normalize to -1 to +1
cos_norm = cos_data / (2**23)
sin_norm = sin_data / (2**23)

# Plot
plt.figure(figsize=(12, 4))
plt.plot(cos_norm, label='Cosine', linewidth=1)
plt.plot(sin_norm, label='Sine', linewidth=1)
plt.xlabel('Sample')
plt.ylabel('Amplitude')
plt.title('Oscillator Output')
plt.legend()
plt.grid(True, alpha=0.3)
plt.tight_layout()
plt.show()

print(f"Captured {N} samples")
print(f"Cosine range: [{cos_norm.min():.3f}, {cos_norm.max():.3f}]")
print(f"Sine range: [{sin_norm.min():.3f}, {sin_norm.max():.3f}]")